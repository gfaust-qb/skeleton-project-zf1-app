{
  "name": "gfaust-qb/skeleton-project-zf1-app",

  "description": "A skeleton for creating a new zend framework 1 project within a defined (php-pds/skeleton) structure.",

  "version": "0.0.1-alpha1",

  "type": "project",

  "license": "MIT",

  "authors": [
      {
          "name": "Guido Faust",
          "email": "guido.faust@questback.com",
          "homepage": "http://www.questback.de",
          "role": "Senior Technical Consultant"
      }
  ],

  "config": {
          "vendor-dir": "src/vendor"
  },

  "require": {
    "php-di/php-di": "4.4.*",
    "php-di/zf1-bridge": "2.0.*",
    "phpseclib/phpseclib": "2.0.*"
  },

  "require-dev": {
    "pds/skeleton": "1.*",
    "gfaust-qb/qa-build-tools": "@dev"
  },

  "suggest": {
    "zendframework/zendframework1": "The complete Zend Framework 1",
    "zf1/zend-controller": "The Zend Controller package only"
  }
}
